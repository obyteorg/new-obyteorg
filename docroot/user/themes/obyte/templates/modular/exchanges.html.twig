{% set grid_size = theme_var('grid-size') %}
<section class="section {{ page.header.class}}">
    <section class="container {{ grid_size }}">
        <div class="text-block text-center">
            <h1>{{ page.header.title }}</h1>
        </div>
        <div class="exchanges-list">
            {% for exchange in page.header.exchanges %}
                <a class="exchange-block" href="{{ exchange.link }}" target="_blank" rel="noopener">
                    <img src="{{ exchange.img }}" alt="exchange" style="max-height:70px;">
                </a>
            {% endfor %}
        </div>
        <div class="text-block">
            {{ content|raw }}
        </div>
        <div class="coin-list" style="text-align:center;">
            {% for list in page.header.lists %}
                <a class="coin-block" href="{{ list.link }}" target="_blank" rel="noopener">
                    <img src="{{ list.img }}" alt="coin list">
                    <img class="hover" src="{{ list.imgHover }}" alt="coin list">
                </a>
            {% endfor %}
        </div>
    </section>
</section>

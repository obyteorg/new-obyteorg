{% set grid_size = theme_var('grid-size') %}
<section class="section timeline-wrap {{ page.header.class}}">
    <section class="container {{ grid_size }}">
        <div class="text-block">
            {{ content|raw }}
        </div>
    </section>
    <div class="swiper-outer-wrap d-flex">
        <div class="left-grad">
            <div class="grad"></div>
        </div>
        <section class="container {{ grid_size }}">
            <div class="swiper-container">
            <div class="swiper-wrapper">
                {% for point in page.header.points %}
                    <div class="swiper-slide">
                        <div class="dot"></div>
                        <div class="timestamp">
                            <div class="date">{{point.date}}</div>
                            <div class="event">{{ point.title }}</div>
                        </div>
                    </div>
                {% endfor  %}
            </div>
            <div class="swiper-control d-flex">
                <div class="control left">
                    <img src="{{ url('theme://assets/svg/arrow-left.svg') }}" alt="previous" width="12" height="21">
                </div>
                <div class="control right">
                    <img src="{{ url('theme://assets/svg/arrow-right.svg') }}" alt="next" width="12" height="21">
                </div>
            </div>
        </div>
        </section>
        <div class="right-grad">
            <div class="grad"></div>
        </div>
    </div>
</section>
